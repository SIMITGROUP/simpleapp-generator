<template>
  <Dialog v-model:visible="visible" modal width="50vw">
    <template #header>
      <TextTitle class="text-center">{{ t("pickGroup") }}</TextTitle>
    </template>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 w-full gap-4 p-4"
    >
      <div v-for="(groupName, index) in item.groups" :key="index">
        <NuxtLink
          class="border rounded-lg bg-primary-500 p-4 text-center cursor-pointer"
          @click="pickGroup(groupName)"
          :to="`/${item.xOrg}`"
          external
        >
          {{ t(groupName) }}
        </NuxtLink>
      </div>
    </div>
  </Dialog>
</template>

<script lang="ts" setup>
/**

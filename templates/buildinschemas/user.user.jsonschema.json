{
  "type": "object",
  "x-isolation-type":"tenant",  
  "x-document-api":[
    {
      "action":"getUseInfo",
      "entrypoint":"userinfo",
      "requiredrole":["User"],
      "method":"get", 
      "execute":"getUserInfo",
      "bpmn":"", 
      "returntype":[{"tenantId":0, "orgId":0,"branchId":0, "xOrgList": ["aaa","vvv"], "ssoId": "", "email": "","fullName":"" } ],
      "description":"Get available tenant for current user"
    }
  ],
  "properties": {
    "ssoId": {
      "type": "string",
      "x-document-no":true,
      "examples": [
        "xxxxx-yyyyy-zzzzz-aaa"
      ]
    },
    "fullname": {
      "type": "string",
      "examples": [
        "user 1"
      ]
    },
    "email": {
      "type": "string",    
      "x-document-label":true,  
      "examples": [
        "myemail@abc.com"
      ],
      "format": "email"
    },
    "isactive": {"type": "boolean","default":true},    
    "branches":{
        "type":"array",
        "description":"list of accessible branches",
        "items":{
          "type":"object",        
          "properties":{
            "branch":{"type":"object","properties":{
              "branchId":{"type":"number"},
              "branchCode":{"type":"string"},
              "branchName":{"type":"string"},
              "orgId":{"type":"number"},
              "orgCode":{"type":"string"},
              "orgName":{"type":"string"}
            }},
            "isactive":{"type":"boolean","default":true},          
            "group":{"type":"string","description":"user authorization","enum":["","admin","manager","cashier","teacher"]},    
            "description":{"type":"string"}

          }
        }
      
    }
  }
}
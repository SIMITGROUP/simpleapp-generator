{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "target": "es2017",
      "module": "commonjs",
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule":true,
      "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "paths": {"@": ["./"]}
    },
    "exclude": [
      "node_modules" , "./dist" , "./tools"
   ]
  }
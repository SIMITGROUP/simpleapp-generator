{  
    "compilerOptions": {
      "rootDir": "src",
      "composite":true,
      "outDir": "dist",
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit":false,
      "target": "ES2017",
      "module": "commonjs",
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule":true,
      "strictNullChecks": false,
      
      
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "paths": {"@": ["./"]}
    },
    "exclude": [
      "node_modules" , "./dist" , "./tools"
   ]
  }